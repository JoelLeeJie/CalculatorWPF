        <Button x:Name="Button1" HorizontalAlignment="Left" Margin="18,60,0,0" VerticalAlignment="Top" Width="52" Height="78" Background="#FFEFE7E7" RenderTransformOrigin="0.519,0.533" Click="MathButton">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" FontSize="36" RenderTransformOrigin="-4.431,3.374"/>
        </Button>
        <Button x:Name="Button2" HorizontalAlignment="Left" Margin="105,60,0,0" VerticalAlignment="Top" Width="52" Height="78" Background="#FFEFE7E7" RenderTransformOrigin="0.519,0.533" Click="MathButton">
